{
  "name": "viewer",
  "description": "viewer",
  "version": "0.0.0",
  "repository": ".",
  "devDependencies": {
    "babel-cli": "^6.7.5",
    "babel-preset-es2015": "^6.6.0",
    "babelify": "^7.2.0",
    "bower-installer": "~1.2.0",
    "clean-css": "~3.0.7",
    "eslint": "^2.7.0",
    "eslint-config-airbnb": "^7.0.0",
    "less": "~2.3.1",
    "parallelshell": "~1.0.4",
    "uglify-js": "~2.4.16",
    "watch": "~0.13.0"
  },
  "scripts": {
    "postinstall": "mkdir -p static/build && npm run vendor && npm run app",
    "vendor": "npm run vendor:fetch && parallelshell 'npm run vendor:js' 'npm run vendor:css'",
    "vendor:fetch": "bower-installer",
    "vendor:js": "uglifyjs static/vendor/{jquery,lodash,bootstrap,d3}/js/*.js -o static/build/vendor.min.js --source-map static/build/vendor.min.js.map --source-map-url ./vendor.min.js.map --source-map-root /",
    "vendor:css": "cleancss static/vendor/*/css/*.css -o static/build/vendor.min.css #--source-map",
    "app": "parallelshell 'npm run app:js' 'npm run app:id:less' 'npm run app:libris:less'",
    "app:eslint": "eslint 'static/js/**/*.es6' || true",
    "app:js": "parallelshell 'npm run app:transpile'",
    "app:transpile": "browserify static/js/es6/app.es6 -t babelify -o static/build/app.js --extension=.js --extension=.json --extension=.es6",
    "watch": "parallelshell 'npm run watch:js' 'npm run watch:libris:less' 'npm run watch:id:less'",
    "watch:js": "watch 'npm run app:js' static/js/",
    "watch:id:less": "watch 'npm run app:id:less' static/less/",
    "watch:libris:less": "watch 'npm run app:libris:less' static/less/",
    "app:id:less": "lessc static/less/main_id.less static/build/id.css --source-map=static/build/id.css.map",
    "app:libris:less": "lessc static/less/main_libris.less static/build/libris.css --source-map=static/build/libris.css.map",
    "test": "cd tests && nightwatch --test specs/viewer.js",
    "test:chrome": "cd tests && nightwatch --test specs/viewer.js -e chrome"
  }
}
